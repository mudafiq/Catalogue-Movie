<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ActivityDetailMovie">

    <TextView
        android:id="@+id/textViewJudulDetail"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="Judul"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageViewBackdrop"
        android:layout_below="@id/textViewJudulDetail"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tanggal"
        android:text="Release Date: "
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_below="@id/imageViewBackdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewReleaseDateDetail"
        android:text="12-10-2018"
        android:layout_toRightOf="@id/tanggal"
        android:layout_below="@id/imageViewBackdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/rating"
        android:text="Rating: "
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textViewReleaseDateDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewRatingDetail"
        android:layout_toRightOf="@+id/rating"
        android:layout_below="@id/textViewReleaseDateDetail"
        android:text="7.8"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/deskripsi"
        android:text="Deskripsi:"
        android:textStyle="bold"
        android:layout_below="@id/textViewRatingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewOverviewDetail"
        android:text="deskripsi"
        android:layout_below="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>